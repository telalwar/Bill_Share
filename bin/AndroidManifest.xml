<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.billshare"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/billshare"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.billshare.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.billshare.Help"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="com.example.billshare.EnterManualValues"
            android:label="@string/title_activity_enter_manual_values" >
        </activity>
        <activity
            android:name="com.example.billshare.DivideBill"
            android:label="@string/title_activity_divide_bill" >
        </activity>
        <activity
            android:name="com.example.billshare.Notify"
            android:label="@string/title_activity_notify" >
        </activity>
        <activity
            android:name="com.example.billshare.TextSent"
            android:label="@string/title_activity_text_sent" >
        </activity>
        <activity
            android:name="com.example.billshare.Feedback"
            android:label="@string/title_activity_feedback" >
        </activity>
        <activity
            android:name="com.example.billshare.Thanks"
            android:label="@string/title_activity_thanks" >
        </activity>
    </application>

</manifest>